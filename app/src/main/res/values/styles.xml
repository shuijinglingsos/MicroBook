<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="title_text">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20dip</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="title_btn">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15dip</item>
        <item name="android:width">70dip</item>
    </style>

    <style name="menu_text">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="menu_anim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_buttom_in</item>
        <item name="android:windowExitAnimation">@anim/push_buttom_out</item>
    </style>

    <style name="input_field">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">15dip</item>
    </style>


    <style name="Widget.ListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@null</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Widget.ExpandListView" parent="@style/Widget.ListView">
        <item name="android:background">@color/transparent</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:childDivider">@drawable/child_divider</item>
    </style>

    <style name="dialog_anim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_buttom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_buttom_out</item>
    </style>

    <style name="dialog_filter" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@null</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <item name="android:windowAnimationStyle">@style/dialog_anim</item>
    </style>
</resources>
