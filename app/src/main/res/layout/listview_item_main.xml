<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="5dip">

    <com.lidong.daymoney.ui.ImageViewText
            android:id="@+id/imageViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="5dip">
        </com.lidong.daymoney.ui.ImageViewText>
    
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:layout_weight="1" 
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip">        

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"            
            android:text="今天"
            android:textColor="#000"
            android:textSize="20dip"
            android:textStyle="bold" />
        
         <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="2012.11.1-2012.11.30"
            android:textColor="#646464"
            android:textSize="13dip" />
        
         <TextView
            android:id="@+id/tv_expend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="-$100000.00"
            android:textColor="@color/expend_money"
            android:textSize="15.5dip" />

        <TextView
            android:id="@+id/tv_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="+$200000.00"
            android:textColor="@color/income_money" 
            android:textSize="15.5dip"/>

    </RelativeLayout>    


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/common_list_item_arrow"
        android:layout_marginRight="5dip" />

</LinearLayout>